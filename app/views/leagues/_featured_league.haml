.col-md-8
  = link_to league do
    = image_tag "featured_league_#{league.slug.underscore}_logo.jpg", class: "d-block.img-fluid", alt: "#{league.name}", id: "carouselImage"
.col-md-4
  #featuredLeagueTitle.row
    = link_to league.name, league
  #featuredLeagueDescription.row
    = league.description
    %br/
    %br/
    = button_tag "View League Rules", class: "btn btn-secondary", data: {toggle: "modal", target: "#rulesModal#{league.id}"}

    = league_membership_change league, "btn-md"
