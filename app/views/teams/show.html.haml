= page_title @page_title

%ol.breadcrumb
  %li.breadcrumb-item= link_to 'Teams', teams_path
  %li.breadcrumb-item.active= @team.name

%h1
  = image_tag team_logo_filename(@team), alt: @team.name, size: 48
  = @team.name
  - if can? :update, @team
    = link_to 'Edit', edit_team_path(@team), class: "small"

%p
  %strong Region:
  = @team.region
%p
  %strong Active:
  = @team.active


%h3 Players
- if @players.any?
  = render "players/players_list", players: @players
- else
  %p No players in this team

%br

%h3 Games
- if @team_games.any?
  = render "games/games_list", games: @team_games, should_paginate: true
- else
  %p No games recorded for this team
