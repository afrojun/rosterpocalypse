= page_title heading

= form_for(team, html: {class: "compact-form"}) do |f|
  %h1.form-heading= heading
  = render 'layouts/error_messages', object: team

  .field
    = f.label :name, class: "sr-only"
    = f.text_field :name, autofocus: true, required: true, class: "form-control", placeholder: "Team Name"
  .field
    = f.label :region, class: "sr-only"
    = f.select :region, Team::REGIONS, {}, required: true, class: "form-control"
  .field
    = f.label :active
    = f.check_box :active
  .actions
    = f.submit submit_message, class: "btn btn-lg btn-primary btn-block"
