- present @player do |p|
  = page_title p.name
  %h1= p.name
  %p
    %strong Role:
    = p.role
  %p
    %strong Team:
    = link_to p.team.name, p.team
  %p
    %strong Country:
    = p.country
  %p
    %strong Cost:
    = p.cost
  %p
    %strong Most Played Heroes:
    = link_to_heroes_with_stat p.most_played_heroes
  %p
    %strong Top Winrate Heroes:
    = link_to_heroes_with_stat p.top_winrate_heroes

  %h3 Games
  = render "games/games_list", games: @player_games
  - if can? :update, Player
    = link_to 'Edit', edit_player_path(p)
    |
  = link_to 'Players', players_path
