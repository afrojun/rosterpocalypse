= page_title "Reset Password"

= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "compact-form" }) do |f|
  %h1.form-heading Reset Password
  = render 'layouts/error_messages', object: resource

  .field
    = f.label :email, class: "sr-only"
    = f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "bob@rosterpocalypse.com"

  .actions
    = f.submit "Send me reset password instructions", class: "btn btn-primary btn-block"
