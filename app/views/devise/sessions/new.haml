= page_title "Log In"

= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "compact-form"}) do |f|
  %h1.form-heading Log in
  = render 'layouts/error_messages', object: resource

  = f.label :email, class: "sr-only"
  = f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "Email address"

  = f.label :password, class: "sr-only"
  = f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password"

  - if devise_mapping.rememberable?
    = f.check_box :remember_me
    = f.label :remember_me

  .actions
    = f.submit "Log in", class: "btn btn-lg btn-primary btn-block"

= render "devise/shared/oauth_login_links"